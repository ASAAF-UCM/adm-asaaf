<div>
  <%=
    link_to "<button type=\"button\" class=\"btn btn-outline-primary btn-sm\">
      #{t_scoped :return}
    </button>".html_safe,
    member_admin_path(@member.id)
  %>
</div>

<h1><%= member_admin_edit_title @member %></h1>

<%= form_with model: @member, url: member_admin_path(@member.id), method: :put do |form| %>
  <div class="form-row mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-row mb-3">
    <%= form.label :surname1 %>
    <%= form.text_field :surname1, class:' form-control'  %>
  </div>
  <div class="form-row mb-3">
    <%= form.label :surname2 %>
    <%= form.text_field :surname2, class: 'form-control'  %>
  </div>
  <div class="form-row mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control'  %>
  </div>
  <div class="form-row mb-3">
    <%= form.label :birthdate %>
    <%= form.date_field :birthdate, class: 'form-control' %>
  </div>
  <div class="form-row mb-3">
    <%= form.label :id_document_number %>
    <div class="input-group flex-nowrap">
      <%= form.collection_select :id_document_type_id,
        IdDocumentType.all,
        :id,
        ->(element) { translate_id_name(element) },
        {},
        {class: 'form-select'} %>
      <%= form.text_field :id_document_number, class: 'form-control' %>
      <%= form.date_field :id_document_expiration_date, class: 'form-control' %>
    </div>
  </div>
  <div class="form-row input-group custom-file mb-3">
    <%= form.label :id_image, class: 'input-group-text'  %>
    <%= form.file_field :id_image, class: 'form-control' %>
  </div>
  <div class="form-row mb-3">
    <%= form.label :moodle_name %>
    <%= form.text_field :moodle_name, class: 'form-control' %>
  </div>
  <%= form.submit (t_scoped :submit), class: "btn btn-primary" %>
<% end %>
