<div>
<h1><%= t 'devise.sessions.new_title' %></h1>

<%= form_with model: @member, url: member_session_path, method: :post do |f|%>
  <div class='form-group mb-3'>
    <%= f.label :email, class: 'invisible' %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: true %>
  </div>

  <div class='form-group mb-3'>
    <%= f.label :password, class: 'invisible' %>
    <%= f.password_field :password, autocomplete: 'current-password', placeholder: true %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class='form-check mb-3'>
      <%= f.check_box :remember_me, class: 'form-check-input' %>
      <%= f.label :remember_me, class: 'form-check-label' %>
    </div>
  <% end %>
  <div class="mb-3 ">
    <%= f.submit t('devise.sessions.sign_in'), class: 'btn btn-primary' %>
  </div>

<% end %>

<div class="sessions_shared_links">
  <%= render 'devise/shared/links' %>
</div>
</div>
