<div>
<h2><%= t 'devise.confirmations.new_title' %></h2>

<%= form_with(model: resource, scope: resource_name, local:true, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, class: 'invisible' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.confirmations.submit_button'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
