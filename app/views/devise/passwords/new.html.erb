<div>
  <h1><%= t 'devise.passwords.new_title' %></h1>

<%= form_with(model: resource, scope: resource_name, local: true, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, class: 'invisible' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: true, class: 'form-control mb-3' %>
  </div>

    <%= f.submit t('devise.passwords.send_password_instructions'), class: 'btn btn-primary mb-3' %>
<% end %>

<%= render "devise/shared/links" %>
</div>
