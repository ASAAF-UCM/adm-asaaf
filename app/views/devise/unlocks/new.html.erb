<div>
<h2><%= t 'devise.unlocks.new_title' %></h2>

<%= form_with(model: resource, scope: resource_name, local:true, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <div class='form-group'>
    <%= f.label :email, class: 'invisible' %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: true %>
  </div>

    <%= f.submit t('devise.unlocks.resend_button'), class: 'btn btn-primary' %>
<% end %>

<%= render 'devise/shared/links' %>
</div>
